@model IEnumerable<LaborU.Models.ViewModels.PeopleViewModel>
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>會員/捐款者資訊</h1>
<a asp-action="Create"><button type="button" class="btn btn-primary">新增</button></a>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Email</th>
        <th>姓名</th>
        <th>地址</th>
        <th>身份證字號</th>
    </tr>
    </thead>
    @foreach (var peopleViewModel in Model)
    {
        <tr>
            <td>@Html.Raw(peopleViewModel.Email)</td>
            <td>@Html.Raw(peopleViewModel.Name)</td>
            <td>@Html.Raw(peopleViewModel.Address)</td>
            <td>
                <input type="password" readonly="readonly" value="@Html.Raw(peopleViewModel.IDNumber)" />
            </td>
            <td>
                <a href="@Url.Action("Edit", new {Id = peopleViewModel.Id})" asp>
                    <button type="button" class="btn btn-primary">編輯</button>
                </a>
            </td>
        </tr>

    }
</table>